# Application Configuration
APP_HOST=0.0.0.0
APP_PORT=8000
APP_LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Database Configuration
DATABASE_URL=sqlite:///./data/companies.db
DATABASE_POOL_SIZE=10
DATABASE_POOL_MAX_OVERFLOW=20

# External API Configuration
EXTERNAL_API_BASE_URL=https://kaifazhe.fun/prod-api
EXTERNAL_API_TIMEOUT=30
EXTERNAL_API_MAX_CONCURRENT=200
EXTERNAL_API_USER_AGENT=CC-Company-Sync/1.0

# Sync Configuration
DEFAULT_PAGE_SIZE=50
SYNC_BATCH_SIZE=1000
SYNC_RETRY_ATTEMPTS=3
SYNC_RETRY_DELAY=1.0
SYNC_PROGRESS_UPDATE_INTERVAL=10

# Security Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE"]
CORS_ALLOW_HEADERS=["*"]

# Performance Configuration
MAX_SEARCH_RESULTS=1000
SEARCH_TIMEOUT=5
CACHE_TTL=300

# Development Configuration
DEBUG=false
RELOAD=false
WORKERS=1